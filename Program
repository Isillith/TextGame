class Character
    {
        public int Level;
        public string myName;
        public string Autognosie;
        public int Obscure;
        public int Concrete;
        public int Life;
        public int Sanity;
        public int plusObscure;
        public int plusConcrete;

        public Character(int level, string myname, string autognosie, int obscure, int concrete, int life, int sanity)
        {
            Level = level;
            Name = name;
            Autognosie = autognosie;
            Obscure = obscure;
            Concrete = concrete;
            Life = life;
            Sanity = sanity;
        }
        public void AddObscure(int addObscure)
        {
            Obscure += addObscure;
        }
        public void AddConcrete(int addConcrete)
        {
            Concrete += addConcrete;
        }
    }

 static void Mirror(Character A)
    {
        Console.Clear();
        Console.WriteLine("나는" + A.myName);
        Console.WriteLine("Lv. " + A.Level);
        Console.WriteLine(A.Name + " 내 정체는.... " + A.Autognosie + " 인 것 같다."); )");
        Console.WriteLine("내가 가진 힘은 " + A.Obscure + " 이고, 물리력은 " + A.Concrete + " 만큼.");
        Console.WriteLine("생명력은 " + A.Life + " 정도, 돈은... " + A.Sanity + " 만큼 있다.");
        Console.WriteLine("사람들 덕분에... 힘이 " + A.plusObscure + " 만큼 증가했다.");
        Console.WriteLine("물리력도... " + A.plusConcrete + "만큼 증가했다.");
